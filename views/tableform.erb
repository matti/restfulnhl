<html>
<head>
<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
</head>

<body>
  <h2> <%="#{@msg}"%></h2>

  <p><i>Page updated <%="#{@updated}"%> </i></p>

    <table>

      <% i = 1 %>

        <tr>
            <td>
                &nbsp; &nbsp; &nbsp; &nbsp;
            </td>
            <td>

            </td>
            <td>
                team
            </td>
            <td>
                games
            </td>
            <td>
                <a href="/goals"> <%="#{@formatter.goals('goals')}"%> </a>
            </td>
            <td>
                <a href="/assists"> <%="#{@formatter.assists('assists')}"%> </a>
            </td>
            <td>
                <a href="/points"> <%="#{@formatter.points('points')}"%> </a>
            </td>
          </tr>

        <% @list.each do |player| %>

          <tr>
            <td>
             <%="#{i}"%>
            </td>

            <td>
                <%="#{player.name}"%>
            </td>
            <td>
                <%="#{player.team}"%>
            </td>
            <td>
                <%="#{player.games}"%>
            </td>
            <td>
                <%="#{@formatter.goals(player.goals)}"%>
            </td>
            <td>
                <%="#{@formatter.assists(player.assists)}"%>
            </td>
            <td>
                <%="#{@formatter.points(player.points)}"%>
            </td>
          </tr>

          <% i += 1 %>
        <% end %>

    </table>

</body>
</html>